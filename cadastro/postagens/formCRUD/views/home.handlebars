
<section id="secao">
    <div id="tema">
        <hr>
        <h2>Lista de Posts</h2>
        <hr>
    </div>

    {{#each posts}}
        <h3>{{dataValues.titulo}}</h3>
        <p id="conteudo">{{dataValues.conteudo}}</p>
      <!--  <p>{{dataValues.createdAt}}</p> mostra a data que o dado foi inserido no bd-->

        <div id="botoes">
            <a href="/editar/{{dataValues.id}}"><button id="btn1">Editar</button>
            <a href="/deletar/{{dataValues.id}}"><button id="btn2">Deletar</button></a>
        </div>
        <hr>
    {{/each}}

</section>

<footer>
